<!DOCTYPE html>
<html lang="ru">
<head>
    @*MetaTags*@
    @await Html.PartialAsync("MetatagsPartial");
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">

    @*Bootstrap core CSS && Additional CSS Files*@
    @await Html.PartialAsync("CssPartial");
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    @await Html.PartialAsync("PreloaderPartial");

    <!-- Header -->
    @await Html.PartialAsync("HeaderPartial");

    <!-- Page Content -->
    <!-- Banner Starts Here -->
    @await Html.PartialAsync("PageContentPartial");

    @*Banner == call-to-action*@
    @await Html.PartialAsync("BannerPartial");
    
    @*Main Content*@
    <section class="blog-posts">
        <div class="container">
            <div class="row">
                @*Posts Company*@ 
                @await Html.PartialAsync("PostsPartial");
                @RenderBody(); 
                
                @*Sidebar*@
                <div class="col-lg-4">
                    @await Html.PartialAsync("SidebarPartial");
                </div>
            </div>
        </div>
    </section>

    @*Footer*@
    @await Html.PartialAsync("FooterPartial");

    @*Bootstrap core JavaScript && Additional Scripts*@
    @await Html.PartialAsync("ScriptsPartial");

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>
</body>
</html>